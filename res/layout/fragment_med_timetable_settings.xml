<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eef4f6"
    android:clickable="true"
    android:fillViewport="false" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
       
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Time Schedule"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#b2394e" />

        <Space
            android:id="@+id/space28"
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_gravity="left|center_vertical" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:orientation="vertical" >

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false" />

            <Space
                android:id="@+id/space26"
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_gravity="left|center_vertical" />
        </LinearLayout>

        <Space
            android:id="@+id/space32"
            android:layout_width="20px"
            android:layout_height="20px" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Interval"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#b2394e" />

        <Space
            android:id="@+id/space24"
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_gravity="left|center_vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:orientation="horizontal" >

            <Space
                android:id="@+id/space12"
                android:layout_width="20px"
                android:layout_height="20px" />

            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttblue"
                android:singleLine="false"
                android:text="4 h" />

            <Space
                android:id="@+id/space10"
                android:layout_width="20px"
                android:layout_height="20px" />

            <Button
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttblue"
                android:text="6 h" />

            <Space
                android:id="@+id/space11"
                android:layout_width="20px"
                android:layout_height="20px" />

            <Button
                android:id="@+id/button13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttblue"
                android:text="8 h" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20px" >

            <Space
                android:id="@+id/space35"
                android:layout_width="20px"
                android:layout_height="20px" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    Number of doses"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:textColor="#b2394e" />

            <Space
                android:id="@+id/space33"
                android:layout_width="20px"
                android:layout_height="20px" />

            <NumberPicker
                android:id="@+id/numberPicker1"
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:background="@drawable/numarset"
                android:baselineAligned="false"
                android:measureWithLargestChild="false"
                android:minHeight="10pt"
                android:minWidth="5pt"
                android:orientation="vertical"
                android:visibility="visible" />
        </LinearLayout>

        <Space
            android:id="@+id/space34"
            android:layout_width="40px"
            android:layout_height="40px" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Administration"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#b2394e" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/layoutAdministration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edmediu"
                    android:text=" indication one " />
            </LinearLayout>

            <Space
                android:id="@+id/space21"
                android:layout_width="20px"
                android:layout_height="20px" />

            <Button
                android:id="@+id/plus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/plusrosu" />

            <Button
                android:id="@+id/minus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/minusrosu" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <Space
            android:id="@+id/space40"
            android:layout_width="20px"
            android:layout_height="20px" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To do"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#b2394e" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edmediu"
                    android:text=" action" />
            </LinearLayout>

            <Space
                android:id="@+id/space1"
                android:layout_width="20px"
                android:layout_height="20px" />

            <Button
                android:id="@+id/plus2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/plusrosu" />

            <Button
                android:id="@+id/plus2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/minusrosu" />
        </LinearLayout>

        <Space
            android:id="@+id/space36"
            android:layout_width="20px"
            android:layout_height="20px" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:text="Not to do"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#b2394e" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edmediu"
                    android:text="don&apos;t" />
            </LinearLayout>

            <Space
                android:id="@+id/space2"
                android:layout_width="20px"
                android:layout_height="20px" />

            <Button
                android:id="@+id/plus3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/plusrosu"
                android:focusable="true" />

            <Button
                android:id="@+id/minus3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/minusrosu" />
        </LinearLayout>

        <Space
            android:id="@+id/space37"
            android:layout_width="20px"
            android:layout_height="20px" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous drugs:"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#b2394e" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/editText5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edmediu"
                    android:text="drug" />
            </LinearLayout>

            <Space
                android:id="@+id/space3"
                android:layout_width="20px"
                android:layout_height="20px" />

            <Button
                android:id="@+id/plus4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/plusrosu" />

            <Button
                android:id="@+id/plus4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/minusrosu" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drug interaction"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#b2394e" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/editText6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edmediu"
                android:text="drug" />

            <Space
                android:id="@+id/space4"
                android:layout_width="20px"
                android:layout_height="20px" />

            <Button
                android:id="@+id/plus5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/plusrosu" />

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/minusrosu" />
        </LinearLayout>

        <Space
            android:id="@+id/space30"
            android:layout_width="20px"
            android:layout_height="20px" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reminder to take drug"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#b2394e" />

        <EditText
            android:id="@+id/editText9"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edlung"
            android:text="minutes before" />

        <Space
            android:id="@+id/space31"
            android:layout_width="20px"
            android:layout_height="20px" />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <Space
                android:id="@+id/space38"
                android:layout_width="20px"
                android:layout_height="20px" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radiounchecked"
                android:text="Skip"
                android:textColor="#b2394e" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Space
                    android:id="@+id/space20"
                    android:layout_width="20px"
                    android:layout_height="40px" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nr of doses to take"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:textColor="#b2394e" />

                <EditText
                    android:id="@+id/editText8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edlung"
                    android:inputType="numberDecimal"
                    android:text="nr of doses" />
            </LinearLayout>

            <Space
                android:id="@+id/space19"
                android:layout_width="20px"
                android:layout_height="40px" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radiounchecked"
                android:text="No skip"
                android:textColor="#b2394e" />
        </RadioGroup>

        <Space
            android:id="@+id/space25"
            android:layout_width="20px"
            android:layout_height="70px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/save"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

            <Space
                android:id="@+id/space18"
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/button16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/cancel" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>