<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_settings_margin"
    android:paddingRight="@dimen/activity_horizontal_settings_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="11"
    tools:context=".Settings$UserSetFragment" >

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:weightSum="10">
 <TextView
     android:layout_weight="2"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="Silent"
    android:textSize="30dp"   
     
     />
<Switch 
    android:layout_weight="8"
    android:id="@+id/togglebutton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:textOn="On"
    android:textOff="Off"
   /> 
</LinearLayout>


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="3">

     <TextView
     android:layout_weight="2"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="Bracelet"
    android:textSize="30dp"   
/>

<Switch 
    android:layout_weight="8"
    android:id="@+id/togglebutton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:textOn="On"
    android:textOff="Off"
   />
</LinearLayout>


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="3" >
    
     <TextView
     android:layout_weight="2"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="Password"
    android:textSize="30dp"   
     
     />
<Switch 
    android:layout_weight="8"
    android:id="@+id/togglebutton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:textOn="On"
    android:textOff="Off"
   />    
</LinearLayout>





<LinearLayout 
    android:id="@+id/passwd_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    >


    <Button 
        android:id="@+id/change_passwd"
        android:text="Change password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        />
    <EditText  
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:id="@+id/old_passwd"
        />
    
    <EditText  
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/type_passwd"
        />
    <EditText  
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/retype_passwd"
        />
    

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="5">
        
           <Button 
        android:id="@+id/save_passwd"
        android:text="save"
        android:gravity="left"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="3"/>
           
        <Button 
        android:id="@+id/canel_passwd"
        android:text="cancel"
        android:layout_weight="1"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
   
        />
        
        
    </LinearLayout>
    
    
    
    
</LinearLayout>



</LinearLayout>