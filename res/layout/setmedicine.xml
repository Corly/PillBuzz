<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:clickable="true"
    android:fillViewport="false" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/edlung"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:gravity="left|top"
            android:linksClickable="true"
            android:text="Name"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#b2394e" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoText="false"
            android:background="@drawable/edlung"
            android:hint=" type name here" />

        <TextView
            android:id="@+id/tDescription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoText="true"
            android:text="Description"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#b2394e" />

        <EditText
            android:id="@+id/edit_text_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoText="false"
            android:background="#ffffff"
            android:selectAllOnFocus="false"
            android:hint=" what is it for " />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Picture"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#b2394e" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Space
                android:layout_width="50px"
                android:layout_height="20px" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="3px"
                android:adjustViewBounds="true"
                android:background="@drawable/foto"
                android:clickable="true"
                android:contentDescription="picture" />

            <Space
                android:layout_width="80px"
                android:layout_height="20px" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="3px"
                android:background="@drawable/framegreen"
                android:cropToPadding="false"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="3px"
                    android:adjustViewBounds="false"
                    android:background="@drawable/preductal"
                    android:clickable="true"
                    android:cropToPadding="false" />
            </FrameLayout>
        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="A dosage"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:textColor="#b2394e" />

                <EditText
                    android:id="@+id/edit_text_dosage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoText="true"
                    android:inputType="number"
                    android:background="@drawable/edmediu"
                    android:hint=" write a " />
            </LinearLayout>

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="unit"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:textColor="#b2394e" />

                <EditText
                    android:id="@+id/edit_text_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoText="false"
                    android:background="@drawable/edmic"
                    android:hint=" unit" />
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Space
                android:layout_width="80px"
                android:layout_height="20px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Q-R code"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:textColor="#b2394e" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="10px" />

                <Button
                    android:id="@+id/button14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/qrcodered" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px" />
            </LinearLayout>

            <Space
                android:layout_width="80px"
                android:layout_height="20px" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkedButton="@android:integer/config_longAnimTime"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <Space
                    android:layout_width="20px"
                    android:layout_height="40px" />

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/radiounchecked"
                    android:checked="false"
                    android:gravity="center_vertical"
                    android:text="madatory"
                    android:textColor="#b2394e" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px" />

                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/radiounchecked"
                    android:gravity="center_vertical"
                    android:text="optional"
                    android:textColor="#b2394e" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="30px" />
            </RadioGroup>
        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_gravity="left|center_vertical" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Administration"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#b2394e" />

        <EditText
            android:id="@+id/edit_text_administration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/edlung"
            android:inputType="text"
            android:hint="with watter/food/sleep" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_gravity="left|center_vertical" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="To do"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#b2394e" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_gravity="left|center_vertical" />

        <EditText
            android:id="@+id/todoaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/edlung"
            android:hint="to do action" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_gravity="left|center_vertical" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="Not to do"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#b2394e" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_gravity="left|center_vertical" />

        <EditText
            android:id="@+id/notaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/edlung"
            android:hint="not to do action" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_gravity="left|center_vertical" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="Previous drugs"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#b2394e" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_gravity="left|center_vertical" />

        <EditText
            android:id="@+id/edit_text_previousdrug"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/edlung"
            android:hint="drug" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_gravity="left|center_vertical" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="Reminder to take drug"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#b2394e" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_gravity="left|center_vertical" />

        <EditText
            android:id="@+id/timebeforesnooze"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/edlung"
            android:hint="time before snooze" />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radiounchecked"
                android:text="Skip"
                android:textColor="#b2394e" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Space
                    android:layout_width="20px"
                    android:layout_height="40px" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nr of doses to take"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:textColor="#b2394e" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_gravity="left|center_vertical" />

                <EditText
                    android:id="@+id/editText8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edlung"
                    android:inputType="numberDecimal"
                    android:hint="nr of doses" />
            </LinearLayout>

            <Space
                android:id="@+id/space19"
                android:layout_width="20px"
                android:layout_height="40px" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/radiounchecked"
                android:text="No skip"
                android:textColor="#b2394e" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start time"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#b2394e" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_gravity="left|center_vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|left"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HH:MM" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <Button
                android:id="@+id/changetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttblue2"
                android:text="change " />
        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <TextView
            android:id="@+id/startdatelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start date"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#b2394e" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/startdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="DD.MM.YY" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_gravity="center_horizontal|top" />

            <Button
                android:id="@+id/changestartdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/buttblue2"
                android:text="change" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/enddatelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:text="End date"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:textColor="#b2394e" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/enddate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DD.MM.YY" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px" />

                <Button
                    android:id="@+id/changeenddate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttblue2"
                    android:text="change" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/finaldate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Final Date"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:textColor="#b2394e" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <Switch
                android:id="@+id/switch_time_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_gravity="left|center_vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interval"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:textColor="#b2394e" />

            <Space
                android:layout_width="40px"
                android:layout_height="20px" />

            <TextView
                android:id="@+id/text_view_interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xh" />
        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:orientation="horizontal"
            android:weightSum="4" >

            <Button
                android:id="@+id/button_4h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:singleLine="false"
                android:text="4 h"
                android:width="1dp" />

            <Space
                android:layout_width="15px"
                android:layout_height="20px" />

            <Button
                android:id="@+id/button_6h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="6 h" />

            <Space
                android:layout_width="15px"
                android:layout_height="20px" />

            <Button
                android:id="@+id/button_8h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="8 h" />

            <Space
                android:layout_width="15px"
                android:layout_height="20px" />

            <Button
                android:id="@+id/button_12h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="12h" />
        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20px" >

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Dosage                               "
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:textColor="#b2394e" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/nrdoses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="nr of doses" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/doze_entries" />
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="40px"
            android:layout_height="40px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/savebun"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/button16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/cancelbun" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>