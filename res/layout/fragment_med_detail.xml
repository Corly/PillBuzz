<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/med_detail244555"
    style="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textIsSelectable="true"
    tools:context=".MedDetailFragment" >

    <TextView
        android:id="@+id/medNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="Paracetamol"/>

    <TextView
        android:id="@+id/medDescriptionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="Medication usefull when having a cold or a headache"/>

    <TextView
        android:id="@+id/medDosageTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="3 per day"/>

</LinearLayout>