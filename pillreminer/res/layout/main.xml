<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:fillViewport="false" android:clickable="true" android:background="#eef4f6">

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:id="@+id/tName" android:layout_gravity="left|center_vertical"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:textColor="#5c2100"
            android:linksClickable="true" android:gravity="left|top"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="90px"
            android:id="@+id/etName" android:text=" type name here" android:textColor="#8e8995"
            android:background="#ffffff"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:id="@+id/tDescription" android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:background="#33B5E5"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="90px"
            android:text=" what is it for "
            android:id="@+id/editText" android:selectAllOnFocus="false"
            android:autoText="false" android:textColor="#8e8995" android:background="#ffffff"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Picture"
            android:id="@+id/textView2" android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#5c2100"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_weight="1">
        <Space
                android:layout_width="50px"
                android:layout_height="20px"
                android:id="@+id/space8"/>
        <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton" android:adjustViewBounds="true"
                android:contentDescription="picture"
                android:clickable="true" android:layout_margin="3px" android:background="#33B5E5"
                android:layout_gravity="center_vertical"/>
        <Space
                android:layout_width="80px"
                android:layout_height="20px"
                android:id="@+id/space"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_margin="3px" android:adjustViewBounds="false" android:cropToPadding="false"
                android:layout_gravity="center_horizontal" android:background="@drawable/framegreen"
                />
        <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:id="@+id/space7" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="top">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A dosage"
                    android:id="@+id/textView6" android:singleLine="true"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:textColor="#5c2100"/>
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText7" android:text=" write a " android:background="#ffffff"
                    android:textColor="#8e8995"/>
        </LinearLayout>
        <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:id="@+id/space6"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="unit"
                    android:id="@+id/textView7"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:textColor="#5c2100"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" unit"
                    android:id="@+id/editText3" android:autoText="false"
                    android:textColor="#8e8995" android:background="#ffffff"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Q-R code"
                    android:id="@+id/textView14" android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:textColor="#5c2100" android:layout_gravity="center"/>
            <Space
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:id="@+id/space5"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button14" android:background="@drawable/qrpurple"
                    android:layout_margin="3px" android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:id="@+id/space9"/>
        <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:orientation="vertical"
                android:checkedButton="@android:integer/config_longAnimTime">
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="madatory"
                    android:id="@+id/radioButton" android:textColor="#5c2100"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="optional"
                    android:id="@+id/radioButton1" android:textColor="#5c2100"/>
        </RadioGroup>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:text="Route of administration"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:textColor="#5c2100"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" indication one "
                    android:id="@+id/editText1" android:background="@drawable/blmediu"/>
        </LinearLayout>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button" android:background="@drawable/plusrosu"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button6" android:background="@drawable/minusmat"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Schedule"
            android:id="@+id/textView1" android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#5c2100"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:id="@+id/textView4" android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#5c2100"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal|top">
        <TimePicker
                android:layout_width="450px"
                android:layout_height="250px"
                android:id="@+id/timePicker" android:background="@drawable/timesetter" android:clickable="false"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="interval"
            android:id="@+id/textView3" android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#5c2100"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="left|center_vertical">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 h"
                android:id="@+id/button11" android:singleLine="false" android:background="@drawable/buttons"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 h"
                android:id="@+id/button12" android:background="@drawable/buttons2"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 h"
                android:id="@+id/button13" android:background="@drawable/buttons2"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To do"
            android:id="@+id/textView5" android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#5c2100"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" action"
                    android:id="@+id/editText2" android:background="@drawable/blmediu"/>
        </LinearLayout>
        <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:id="@+id/space1"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button1" android:background="@drawable/plusmat"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button7" android:background="@drawable/minusmat"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not to do"
            android:id="@+id/textView8" android:singleLine="false"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:textColor="#5c2100"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText4" android:text="don't" android:background="@drawable/blmediu"/>
        </LinearLayout>
        <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:id="@+id/space2"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2" android:focusable="true"
                android:background="@drawable/plusmat"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button8" android:background="@drawable/minusmat"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous drugs:"
            android:id="@+id/textView9" android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#5c2100"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:orientation="horizontal">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <EditText
                    android:layout_width="500pt"
                    android:layout_height="wrap_content"
                    android:text="drug"
                    android:id="@+id/editText5" android:background="#ffffff"/>
        </LinearLayout>
        <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:id="@+id/space3"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button3" android:background="@drawable/plusmat"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button9" android:background="@drawable/minusmat"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="drug"
                    android:id="@+id/editText6" android:background="@drawable/blmediu"/>
        </LinearLayout>
        <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:id="@+id/space4"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button4" android:background="@drawable/plusmat"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button10" android:background="@drawable/minusmat"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Drug Interaction"
                android:id="@+id/textView10" android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:textColor="#5c2100"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of doses"
                android:id="@+id/textView11"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:textColor="#5c2100"/>
        <NumberPicker
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:id="@+id/numberPicker1" android:measureWithLargestChild="false"
                android:orientation="vertical" android:visibility="visible"


                android:background="@drawable/number" android:baselineAligned="false"
                android:minHeight="10pt" android:minWidth="5pt"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reminder to take drug"
            android:id="@+id/textView12" android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#5c2100"/>

    <EditText
            android:layout_width="300px"
            android:layout_height="90px"
            android:text="minutes before"
            android:id="@+id/editText9" android:background="@drawable/editable"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remind no left drug"
            android:id="@+id/textView13" android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="#5c2100"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button15"/>
    <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="skip"
                android:id="@+id/radioButton2"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="how may hours"
                    android:id="@+id/textView15"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:textColor="#5c2100"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New EditText"
                    android:id="@+id/editText8"/>
        </LinearLayout>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no skip"
                android:id="@+id/radioButton3"/>
    </RadioGroup>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button5" android:layout_gravity="center_horizontal"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:background="@drawable/ok"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/button16"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView16" android:textColor="#5c2100"/>
    </LinearLayout>

</LinearLayout>
</ScrollView >